  }

  /* Close Button */
  .close {
    color: #aaa;
    float: right;
    position: relative;
    font-size: 28px;
    font-weight: bold;
  }

  .close:hover,
  .close:focus {
    color: red;
    text-decoration: none;
    cursor: pointer;
  }

  /* Modal Content Animation */
  @keyframes modalopen {
    from {
      opacity: 0
    }

    to {
      opacity: 1
    }
  }

