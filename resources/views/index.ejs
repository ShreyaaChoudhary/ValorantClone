<STYLE>
  #goToCart {
    -moz-appearance: none;
    -webkit-appearance: none;
    appearance: none;
    border: none;
    background: none;
    color: #0f1923;
    cursor: pointer;
    position: relative;
    padding: 8px;
    margin-bottom: 20px;
    text-transform: uppercase;
    font-weight: bold;
    font-size: 14px;
    transition: all .15s ease;
    width: 70%;
    margin-left: 10%;
  }

  #goToCart::before,
  #goToCart::after {
    content: '';
    display: block;
    position: absolute;
    right: 0;
    left: 0;
    height: calc(50% - 5px);
    border: 1px solid #7D8082;
    transition: all .15s ease;
  }

  #goToCart::before {
    top: 0;
    border-bottom-width: 0;
  }

  #goToCart::after {
    bottom: 0;
    border-top-width: 0;
  }

  #goToCart:active,
  #goToCart:focus {
    outline: none;
  }

  #goToCart:active::before,
  #goToCart:active::after {
    right: 3px;
    left: 3px;
  }

  #goToCart:active::before {
    top: 3px;
  }

  #goToCart:active::after {
    bottom: 3px;
  }

  .goto_lg {
    position: relative;
    display: block;
    padding: 10px 20px;
    color: #fff;
    background-color: #0f1923;
    overflow: hidden;
    box-shadow: inset 0px 0px 0px 1px transparent;
  }

  .goto_lg::before {
    content: '';
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    width: 2px;
    height: 2px;
    background-color: #0f1923;
  }

  .goto_lg::after {
    content: '';
    display: block;
    position: absolute;
    right: 0;
    bottom: 0;
    width: 4px;
    height: 4px;
    background-color: #0f1923;
    transition: all .2s ease;
  }

  .goto_sl {
    display: block;
    position: absolute;
    top: 0;
    bottom: -1px;
    left: -8px;
    width: 0;
    background-color: #0f1923;
    transform: skew(-15deg);
    transition: all .2s ease;
  }

  .goto_text {
    position: relative;
  }

  #goToCart:hover {
    color: white;
  }

  #goToCart:hover .goto_sl {
    width: calc(100% + 15px);
  }

  #goToCart:hover .goto_lg::after {
    background-color: #fff;
  }
</STYLE>
